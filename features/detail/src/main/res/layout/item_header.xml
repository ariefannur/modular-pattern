<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_avatar_header"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/tv_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_header"
        android:textSize="23sp"
        tools:text="Name"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_username"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_header"
        tools:text="\@username"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_header"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="description"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_icon_people"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_header"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_people"
        />

    <TextView
        android:id="@+id/tv_follower"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintStart_toEndOf="@+id/img_icon_people"
        tools:text="follower"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_following"
        app:layout_constraintTop_toBottomOf="@+id/tv_description"
        app:layout_constraintStart_toEndOf="@+id/tv_follower"
        tools:text="following"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_location"
        app:layout_constraintTop_toBottomOf="@+id/img_icon_people"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_header"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_location"
        />

    <TextView
        android:id="@+id/tv_location"
        app:layout_constraintTop_toBottomOf="@+id/img_icon_people"
        app:layout_constraintStart_toEndOf="@+id/img_icon_people"
        tools:text="location"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_email"
        app:layout_constraintTop_toBottomOf="@+id/img_location"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_header"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_email"
        />

    <TextView
        android:id="@+id/tv_email"
        app:layout_constraintTop_toBottomOf="@+id/img_location"
        app:layout_constraintStart_toEndOf="@+id/img_icon_people"
        tools:text="email"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>